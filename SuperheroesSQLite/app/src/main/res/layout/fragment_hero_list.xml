<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.example.superheroessqlite.HeroFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".HeroFragment"
            tools:listitem="@layout/fragment_hero" tools:layout_editor_absoluteY="667dp"
            tools:layout_editor_absoluteX="338dp"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_input_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/floatingBtnAdd"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent" android:focusable="true"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>